<h2 style="text-align: center; color: #333;">Редактировать профиль</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :email, "Электронная почта", style: "font-weight: bold; color: #333;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div style="color: #666; margin-bottom: 20px;">В настоящее время ожидается подтверждение для: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :password, "Новый пароль", style: "font-weight: bold; color: #333;" %>
    <i style="font-size: 0.9em; color: #666;">(оставьте пустым, если не хотите его менять)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    <% if @minimum_password_length %>
      <br />
      <em style="font-size: 0.9em; color: #666;"><%= @minimum_password_length %> символов минимум</em>
    <% end %>
  </div>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :password_confirmation, "Подтверждение нового пароля", style: "font-weight: bold; color: #333;" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
  </div>

  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :current_password, "Текущий пароль", style: "font-weight: bold; color: #333;" %>
    <i style="font-size: 0.9em; color: #666;">(необходимо для подтверждения изменений)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
  </div>

  <div class="actions" style="text-align: center; margin-bottom: 20px;">
    <%= f.submit "Обновить", style: "background-color: #fd7e14; color: white; border: none; padding: 10px 20px; font-size: 1rem; font-weight: bold; cursor: pointer; border-radius: 5px; transition: background-color 0.3s ease-in-out;" %>
  </div>
<% end %>

<h3 style="text-align: center; color: #333;">Удалить аккаунт</h3>

<div style="text-align: center; margin-bottom: 20px;">
  <span style="color: #666;">Недовольны? </span>
  <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?", turbo_confirm: "Вы уверены?" }, method: :delete, style: "background-color: #e63946; color: white; border: none; padding: 10px 20px; font-size: 1rem; font-weight: bold; cursor: pointer; border-radius: 5px; transition: background-color 0.3s ease-in-out;" %>
</div>

<div style="text-align: center;">
  <%= link_to "Назад", :back, style: "text-decoration: none; color: #fd7e14; font-weight: bold;" %>
</div>
