<h2 style="text-align: center; color: #333; margin-top: 50px;">Регистрация</h2>

<div style="max-width: 400px; margin: 50px auto; padding: 20px; background: #FFFFFF; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
  <!-- Проверяем, если есть flash сообщение -->
  <% if flash[:notice] %>
    <div style="background-color: #ffecd9; color: #d16f2e; font-weight: bold; text-align: center; margin-bottom: 20px; padding: 10px; border-radius: 5px; border: 1px solid #d16f2e;">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :email, "Электронная почта", style: "font-weight: bold; color: #333;" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :password, "Пароль", style: "font-weight: bold; color: #333;" %>
      <% if @minimum_password_length %>
        <em style="display: block; font-size: 0.9em; color: #666;">(Минимум <%= @minimum_password_length %> символов)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :password_confirmation, "Подтверждение пароля", style: "font-weight: bold; color: #333;" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>

    <div class="actions" style="text-align: center;">
      <%= f.submit "Зарегистрироваться", style: "background-color: #fd7e14; color: white; border: none; padding: 10px 20px; font-size: 1rem; font-weight: bold; cursor: pointer; border-radius: 5px; transition: background-color 0.3s ease-in-out;" %>
    </div>
  <% end %>

  <div style="margin-top: 20px; text-align: center;">
    <%= render "devise/shared/links" %>
  </div>
</div>

<style>
    body {
        background-color: #FFE5D4; /* Нежный бледно-персиковый фон, как на главной странице */
    }
</style>
